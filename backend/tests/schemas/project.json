{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "Title": {
      "type": "string"
    },
    "ShortDescription": {
      "type": "string"
    },
    "LongDescription": {
      "type": "string"
    },
    "Location": {
      "type": "string"
    },
    "ProjectOwner": {
      "type": "string"
    },
    "Files": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "FileId": {
              "type": "integer"
            },
            "Link": {
              "type": "string"
            }
          },
          "required": [
            "FileId",
            "Link"
          ]
        }
      ]
    }
  },
  "required": [
    "Title",
    "ShortDescription",
    "LongDescription",
    "Location",
    "ProjectOwner",
    "Files"
  ]
}